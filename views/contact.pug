doctype html
html
   head
      title = "Hello Pug"
      link(rel="stylesheet", href="/css/style.css")
   body
      h2 Home
         form(action="/Homeo", method="post")
            div
            label(for="nombre") Nombre:
            input(type="text", id="nombre", name="nombre", required)
            div
            label(for="email") Email:
            input(type="email", id="email", name="email", required)
            div
            label(for="mensaje") Mensaje:
            textarea(id="mensaje", name="mensaje", required)
      button(onclick="window.location.href='/'") Ir a Home 
      button(onclick="window.location.href='/about'") Ir a About     
      button(onclick="window.location.href='/location'") Ir a Location
      button(onclick="window.location.href='/mission'") Ir a Mission
      include ./footer.pug         
